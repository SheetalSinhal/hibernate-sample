<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
	
	<hibernate-configuration>
		<session-factory>
		
		<!-- Database Properties -->
		<!-- Jbdc Database class name -->
		<property name="connection.driver_class">database jdbc driver class</property>
		<!-- Jdbc Database Url  -->
		<property name="connection.url">database jdbc url</property>
		<property name="connection.username">database username</property>
		<property name="connection.password">database password</property>
		
		<!-- Dialet for Database -->
		<property name="dialet">org.hibernate.dialect.PostgreSQLDialect</property>
		<!-- Create tables in database autoatically -->
		<property name="hbm2ddl.auto">create</property>
		<!-- Shows sql queries executed internally for table creation -->
		<property name="show_sql">true</property>
		
		<!-- Mapping file -->
		<mapping resource="resources/student-db-mapping.hbm.xml"/>
		<mapping resource="resources/employee-db-mapping.hbm.xml"/>
		<mapping resource="resources/course-db-mapping.hbm.xml"/>
		<mapping resource="resources/department-db-mapping.hbm.xml" />
		
		</session-factory>
	</hibernate-configuration>