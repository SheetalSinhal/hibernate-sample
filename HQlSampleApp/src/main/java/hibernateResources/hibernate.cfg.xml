<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">Database Driver class</property>
		<property name="connection.url">Database Url</property>
		<property name="connection.username">Database username</property>
		<property name="connection.password">Database password</property>
		
		<!-- Hibernate Configurations  -->
		<property name="dialet">Database dialet class</property>
		<property name="hbm2ddl.auto">update</property>
		
		<!-- Mapping files -->
		<mapping resource="hibernateResources/product-database-mapping.hbm.xml"/>
	</session-factory>
</hibernate-configuration>